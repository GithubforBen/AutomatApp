<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="800.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.schnorrenbergers.automat.controller.SettingsController">
    <children>
        <GridPane prefHeight="800.0" prefWidth="480.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="165.0" minHeight="10.0" prefHeight="147.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="451.0" minHeight="10.0" prefHeight="266.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="335.0" minHeight="8.0" prefHeight="237.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="144.0" minHeight="10.0" prefHeight="144.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#fullscreen" prefHeight="345.0" prefWidth="297.0"
                        text="Fullscreen">
                    <font>
                        <Font size="35.0"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#back" prefHeight="455.0" prefWidth="371.0" text="&lt;-"
                        GridPane.rowIndex="3">
                    <font>
                        <Font size="35.0"/>
                    </font>
                </Button>
                <AnchorPane GridPane.rowIndex="1">
                    <children>
                        <Text layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Auto Logout Zeit"
                              wrappingWidth="240.0">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Text>
                        <Slider fx:id="slider_logout" layoutX="7.0" layoutY="39.0" majorTickUnit="5.0" max="60.0"
                                min="5.0" minorTickCount="0" prefHeight="40.0" prefWidth="226.0" showTickLabels="true"
                                showTickMarks="true" snapToTicks="true"/>
                        <Text fx:id="display" layoutX="7.0" layoutY="155.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="60-&gt;10" textAlignment="CENTER">
                            <font>
                                <Font size="71.0"/>
                            </font>
                        </Text>
                        <GridPane layoutY="181.0" prefHeight="86.0" prefWidth="240.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="126.0" minWidth="10.0"
                                                   prefWidth="120.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="129.0" minWidth="10.0"
                                                   prefWidth="120.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button mnemonicParsing="false" onAction="#Ok" prefHeight="86.0" prefWidth="120.0"
                                        text="OK">
                                    <font>
                                        <Font size="41.0"/>
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#cancel" prefHeight="86.0" prefWidth="149.0"
                                        text="X" GridPane.columnIndex="1">
                                    <font>
                                        <Font size="41.0"/>
                                    </font>
                                </Button>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
                <Button mnemonicParsing="false" onAction="#resetStats" prefHeight="278.0" prefWidth="275.0"
                        text="Statistik Zurücksetzen" GridPane.columnIndex="1">
                    <font>
                        <Font size="19.0"/>
                    </font>
                </Button>
                <VBox prefHeight="300.0" prefWidth="235.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <CheckBox fx:id="availability" mnemonicParsing="false" prefHeight="46.0" prefWidth="240.0"
                                  text="Verfügbarkeit überprüfen">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </CheckBox>
                        <CheckBox fx:id="checkTime" mnemonicParsing="false" prefHeight="46.0" prefWidth="240.0"
                                  text="Stundenanzahl überprüfen">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </CheckBox>
                        <CheckBox fx:id="screensaver" mnemonicParsing="false" prefHeight="45.0" prefWidth="240.0"
                                  text="Bildschirmschoner">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </CheckBox>
                    </children>
                </VBox>
                <Button mnemonicParsing="false" onAction="#refresh" prefHeight="325.0" prefWidth="419.0" text="PING"
                        GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Button>
                <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
                    <children>
                        <Button mnemonicParsing="false" onAction="#exit" prefHeight="453.0" prefWidth="479.0"
                                text="Stop">
                            <font>
                                <Font size="35.0"/>
                            </font>
                        </Button>
                        <Button fx:id="shut" mnemonicParsing="false" onAction="#shutdown" prefHeight="292.0"
                                prefWidth="240.0" text="Herunterfahren">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
                <Button mnemonicParsing="false" onAction="#addUser" prefHeight="475.0" prefWidth="460.0"
                        text="Hinzufügen" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="35.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
